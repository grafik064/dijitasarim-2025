# Uygulama
NODE_ENV=development
PORT=3000

# Veritabanı
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/dijitasarim

# Redis
REDIS_URL=redis://localhost:6379

# TensorFlow Serving
TENSORFLOW_SERVING_URL=http://localhost:8501

# Dosya Yükleme
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=50000000 # 50MB

# Güvenlik
JWT_SECRET=your-jwt-secret-key
COOKIE_SECRET=your-cookie-secret-key

# API Limitleri
RATE_LIMIT_WINDOW=60000 # 1 dakika
RATE_LIMIT_MAX=100 # Her pencerede maksimum istek sayısı

# Model Yapılandırması
MODEL_BASE_PATH=./models
DEFAULT_MODEL_VERSION=1.0.0

# Analiz Yapılandırması
MAX_BATCH_SIZE=16
ANALYSIS_TIMEOUT=30000 # 30 saniye

# Web İstemcisi
NEXT_PUBLIC_API_URL=http://localhost:3000/api
NEXT_PUBLIC_UPLOAD_MAX_SIZE=50000000 # 50MB

# Loglama
LOG_LEVEL=debug
LOG_FORMAT=json

# Performans İzleme
ENABLE_PERFORMANCE_METRICS=true
METRICS_PORT=9090